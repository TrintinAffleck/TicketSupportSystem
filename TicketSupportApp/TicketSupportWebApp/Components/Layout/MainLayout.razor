@inherits LayoutComponentBase
@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />



<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <MudLayout>
        <MudMainContent Class="px-2">
               
                    
            <article class="content px-4">
                @Body
            </article>
                
        </MudMainContent>
    </MudLayout>

</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

